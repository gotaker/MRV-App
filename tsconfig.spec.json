{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc/spec",
    "types": ["jest", "jsdom", "node"],
    "module": "ES2022",
    "target": "ES2022",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": ["src/**/*.spec.ts", "src/test-setup.ts"]
}
