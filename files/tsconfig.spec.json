{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2022", "DOM"],
    "esModuleInterop": true,
    "types": ["jest", "node"],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src/**/*.spec.ts", "src/test-setup.ts"],
  "exclude": ["node_modules", "dist", "files"]
}
